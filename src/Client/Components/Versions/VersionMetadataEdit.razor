
<MudPaper Class="mud-width-full ma-4 pa-4">

    <MudTextField T="string" @bind-Value="Version.VersionCode"
                  Label="Version" HelperText="Fill with version number" ReadOnly="@IsReadOnly" Required="true" />

    <MudTextField T="string" @bind-Value="Version.ShortDescription" ReadOnly="@IsReadOnly" Label="Short description"
                  Required="true" RequiredError="Description is mandatory!" />
</MudPaper>

@code {
    [Parameter] public PackageVersion Version { get; set; }
    [Parameter] public bool IsEdit { get; set; }
    private bool IsReadOnly { get { return !IsEdit; } }
}